<%= form_with model: @food, local: true do |form| %>
  <div>
    <%= form.label :name, "料理名" %>
    <%= form.text_field :name, required: true  %>
  </div>
  <div>
    <%= form.label :comment, "コメント" %>
    <%= form.text_area :comment %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
